@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/assets/js/programacion/list.js"></script>

    <script>
        $("select#imss").change(function () {
        var valor = $(this).val();
        showUbicacion(valor);
    });

    function showUbicacion(tipo) {
        switch (tipo) {
            case 'true':
                $('#juventud').show();
                $('#jjuventud').show();
                break;

            case 'false':
                document.getElementById('juventud').value = 'false';
                $('#juventud').hide();
                $('#jjuventud').hide();
                break;
        }
    }
    </script>

}
