
@{
    ViewBag.Title = "index";
}


<section class="ls ms section_padding_top_100 section_padding_bottom_100">
    <div class="container">
        <h3>Únete a la red Juventud Sindical</h3>
        <hr />
        <br />
        <div class="row">
            <div class="col-md-12">
                <p>
                    El poder del cambio esta en nuestra <strong>Juventud</strong> Registrate para ser parte de la red Juventud ó envia un comentario  a Marina del Pilar.
                </p>

            </div>
        </div>


        <form class="shop-register" id="frmRegistro" enctype="multipart/form-data">

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group validate-required" id="billing_first_name_field">
                        <label for="billing_first_name" class="control-label">
                            <span class="grey">Nombre</span>
                            <span class="required">*</span>
                        </label>

                        <input type="text" class="form-control " name="nombre" id="nombre" placeholder="" value="">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group validate-required" id="billing_last_name_field">
                        <label for="billing_last_name" class="control-label">
                            <span class="grey">Apellido paterno </span>
                            <span class="required">*</span>
                        </label>

                        <input type="text" class="form-control " name="paterno" id="paterno" placeholder="" value="">

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group validate-required" id="billing_last_name_field">
                        <label for="billing_last_name" class="control-label">
                            <span class="grey">Apellido materno </span>
                        </label>

                        <input type="text" class="form-control " name="materno" id="materno" placeholder="" value="">

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">

                    <div class="form-group validate-required validate-phone" id="billing_phone_field">
                        <label for="billing_phone" class="control-label">
                            <span class="grey">Teléfono </span>
                            <span class="required">*</span>
                        </label>

                        <input type="number" class="form-control " name="telefono" id="telefono" placeholder="numero casa" value="">

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group validate-required validate-phone" id="billing_phone_field">
                        <label for="billing_phone" class="control-label">
                            <span class="grey">Teléfono Celular</span>
                        </label>

                        <input type="number" class="form-control " name="celular" id="celular" placeholder="numero celular" value="">

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group validate-required validate-email" id="billing_email_field">
                        <label for="billing_email" class="control-label">
                            <span class="grey">Correo electrónico </span>
                            <span class="required">*</span>
                        </label>

                        <input type="email" class="form-control " name="email" id="email" placeholder="" value="">

                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group address-field validate-required" id="billing_address_fields">
                        <label for="billing_address_1" class="control-label">
                            <span class="grey">Dirección </span>
                            <span class="required">*</span>
                        </label>

                        <input type="text" class="form-control " name="direccion" id="direccion" placeholder="Número / Calle / Colonia / Codigo Postal" value="">

                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group address-field validate-required validate-postcode" id="billing_postcode_field">
                        <label for="billing_postcode" class="control-label">
                            <span class="grey">RFC </span>
                        </label>

                        <input type="text" class="form-control " name="rfc" id="rfc" placeholder="clave RFC" value="">

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group validate-required validate-phone" id="billing_phone_field">
                        <label for="billing_phone" class="control-label">
                            <span class="grey">Clave Electoral</span>
                        </label>

                        <input type="text" class="form-control " name="claveElectoral" id="claveElectoral" placeholder="" value="">

                    </div>
                </div>
                <div class="col-md-4">

                    <div class="form-group validate-required validate-fax" id="billing_fax_field">
                        <label for="billing_fax" class="control-label">
                            <span class="grey">CURP </span>
                        </label>
                        <input type="text" class="form-control " name="curp" id="curp" placeholder="clave curp" value="">
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group address-field validate-required" id="billing_address_fields">
                        <label for="billing_address_1" class="control-label">
                            <span class="grey">Comentario</span>
                        </label>
                        <textarea rows="10" type="text" class="form-control " name="comentario" id="comentario" placeholder="Deja tu comentario y/o pregunta" value=""></textarea>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="billing_phone" class="control-label">
                            <span class="grey">¿Votaras por Marina del Pilar?</span>
                        </label>
                        <div class="radio">
                            <label>
                                <input type="radio" class="form-control " name="votante" id="votante" value="1"> Si
                            </label>
                            <label>
                                <input type="radio" class="form-control " name="votante" id="votante" value="0"> No
                            </label>
                        </div>

                    </div>

                </div>
                <div class="col-md-3">

                    <div class="form-group">
                        <label for="billing_state" class="control-label">
                            <span class="grey">¿Eres trabajador IMSS? </span>
                            <span class="required">*</span>
                        </label>
                        <div class="radio">
                            <label>
                                <input type="radio" class="form-control " name="esImss" id="esImss" value="true"> Si
                            </label>
                            <label>
                                <input type="radio" class="form-control " name="esImss" id="esImss2" value="false"> No
                            </label>
                        </div>

                    </div>
                </div>
                <div class="col-md-6" id="redjuvenil" style="display:none" ;>
                    <div class="form-group">
                        <label for="billing_state" class="control-label">
                            <span class="grey">¿Quieres ser parte de la Red Juventud Sindical? </span>
                            <span class="required">*</span>
                        </label>
                        <div class="radio">
                            <label>
                                <input type="radio" class="form-control " name="redJuventud" id="redJuventud" value="true"> Si
                            </label>
                            <label>
                                <input type="radio" class="form-control " name="redJuventud" id="redJuventud" value="false" checked> No
                            </label>
                        </div>

                    </div>
                </div>

            </div>


            <div class="row">
                <div class="col-sm-6">

                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" class="form-control " name="aviso" id="aviso" value="1"> Acepto aviso de privacidad
                            </label>
                        </div>
                        <label for="billing_phone" class="control-label" data-toggle="modal" data-target="#modal-agreement">
                            <a>Ver Aviso de Privacidad</a>
                        </label>
                    </div>

                </div>

            </div>






            <div class="col-sm-12">

                <button type="button" class="theme_button wide_button color1" onclick="save('@Url.Action("RegistroJson", "Registro")',document.getElementById('aviso'));">Registrase Ahora</button>
                <button type="reset" class="theme_button wide_button">Limpiar Formulario</button>

            </div>

        </form>



    </div>
</section>


<div class="modal fade" id="modal-agreement">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <object type="application/pdf" data="~/Content/pdf/Avisodeprivacidad.pdf" width="100%" height="500" style="height: 85vh;">No Support</object>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
    $(document).ready(function () {
        $("input[id='esImss']").click(function () {
            $('div#redjuvenil').show();
        });
        $("input[id='esImss2']").click(function () {
            $('div#redjuvenil').hide();

        });

    });
</script>

<script>
    function save(url, aviso) {

        if (!aviso.checked) {
            Swal.fire({
                title: 'Debe aceptar el Aviso de Privacidad',
                text: "",
                type: 'warning',
                showCancelButton: false,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Ok'
            });
        } else {
            Swal.fire({
                title: 'Procesando!',
                html: '',
                onBeforeOpen: () => {
                    Swal.showLoading()
                    return new Promise((resolve) => {
                        var formData = new FormData($('form#frmRegistro')[0]);

                        $.ajax({
                            type: "POST",
                            url: url,
                            data: formData,
                            dataType: 'json',
                            contentType: false,// "multipart/form-data",
                            processData: false,
                            success: function (result) {
                                if (result.accion) {
                                    Swal.fire({
                                        title: 'Realizado!',
                                        text: 'Se ha agregado correctamente',
                                        type: 'success',
                                        onClose: () => {
                                            window.location.reload();
                                        }
                                    });
                                }
                                else
                                    Swal.fire('Ops!', result.Msg, 'error');
                            },
                            error: function (error) {
                                Swal.fire('Hubo un problema!', 'Hacen falta llenar campos.', 'error');
                            }
                        });

                    })
                },
            }).then((result) => {

                if (result.value) {
                    Swal.fire({
                        title: 'Realizado!',
                        text: 'Se ha agregado correctamente',
                        type: 'success',
                        onClose: () => {
                            window.location.reload();
                        }
                    });
                }
            });

        }
    }
</script>